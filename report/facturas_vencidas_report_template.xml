<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="clientes_facturas_vencidas_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Informe del Cliente</h2>
                        <div class="row">
                            <div class="col-6">
                                <p><strong>ID: </strong> <span t-field="doc.id"/></p>
                                <p><strong>ID Pedido:</strong> <span t-field="doc.id_pedido"/></p>
                            </div>
                            <div class="col-6">
                                <p><strong>Fecha de emisi√≥n:</strong> <span t-field="doc.fecha_emision"/></p>
                                <p><strong>Fecha de vencimiento:</strong> <span t-field="doc.fecha_vencimiento"/></p>
                                <p><strong>Estado:</strong> <span t-field="doc.estado_pago"/></p>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>