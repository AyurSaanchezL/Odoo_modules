<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="clientes_pedidos_abiertos_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Informe del Cliente</h2>
                        <div class="row">
                            <div class="col-6">
                                <p><strong>Nombre: </strong> <span t-field="doc.nombre"/></p>
                                <p><strong>Apellidos:</strong> <span t-field="doc.apellido1"/> <span t-field="doc.apellido2"/></p>
                                <p><strong>Teléfono:</strong> <span t-field="doc.telefono"/></p>
                            </div>
                            <div class="col-6">
                                <p><strong>Email:</strong> <span t-field="doc.email"/></p>
                                <p><strong>País:</strong> <span t-field="doc.pais"/></p>
                                <p><strong>Pedidos abiertos:</strong> <span t-field="doc.pedidos_abiertos"/></p>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>