<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="productos_stock_negativo_report_template">
        <t t-call="web.html_container">
            <t t-if="docs">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <h2>Informe de Productos con stock negativo</h2>
                            <div class="row">
                                <div class="col -6">
                                    <p><strong>ID:</strong> <span t-field="doc.id"/></p>
                                    <p><strong>Nombre:</strong> <span t-field="doc.nombre"/></p>
                                    <p><strong>Categoría:</strong> <span t-field="doc.categoria"/></p>
                                </div>
                                <div class="col -6">
                                    <p><strong>Precio:</strong> <span t-field="doc.precio"/></p>
                                    <p><strong>Stock:</strong> <span t-field="doc.stock"/></p>
                                    <p><strong>ID Proveedor:</strong> <span t-field="doc.id_proveedor"/>€</p>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
            <t t-else="">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Informe de Productos con stock negativo</h2>
                        <p>No hay productos con stock negativo.</p>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>