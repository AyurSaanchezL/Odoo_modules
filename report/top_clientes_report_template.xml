<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="top_clientes_report_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2>Top 10 Clientes</h2>

                    <table
                        class="table table-bordered">
                        <tbody>

                            <!-- CABECERAS -->
                            <tr>
                                <td
                                    style="background-color:#3f559e; color:#ffffff; padding:6px;">
                                    <strong>Nombre</strong>
                                </td>
                                <td
                                    style="background-color:#3f559e; color:#ffffff; padding:6px;">
                                    <strong>Apellidos</strong>
                                </td>
                                <td
                                    style="background-color:#3f559e; color:#ffffff; padding:6px;">
                                    <strong>País</strong>
                                </td>
                                <td
                                    style="background-color:#3f559e; color:#ffffff; padding:6px;">
                                    <strong>Fecha de Alta</strong>
                                </td>
                                <td
                                    style="background-color:#3f559e; color:#ffffff; padding:6px;">
                                    <strong>Email</strong>
                                </td>
                                <td
                                    style="background-color:#3f559e; color:#ffffff; padding:6px;">
                                    <strong>Teléfono</strong>
                                </td>
                                <td
                                    style="background-color:#3F9E4C; color:#ffffff; padding:6px;">
                                    <strong>Total gastado</strong>
                                </td>
                            </tr>

                            <t t-foreach="docs" t-as="doc">
                                <!-- VALORES -->
                                <tr>
                                    <td style="padding:6px;">
                                        <span t-field="doc.nombre" />
                                    </td>
                                    <td style="padding:6px;">
                                        <span t-field="doc.apellido1" />
                                        <span t-field="doc.apellido2" />
                                    </td>
                                    <td style="padding:6px;">
                                        <span t-field="doc.pais" />
                                    </td>
                                    <td style="padding:6px;">
                                        <span t-field="doc.fecha_alta" />
                                    </td>
                                    <td style="padding:6px;">
                                        <span t-field="doc.email" />
                                    </td>
                                    <td style="padding:6px;">
                                        <span t-field="doc.telefono" />
                                    </td>
                                    <td style="padding:6px;">
                                        <span t-field="doc.total_gastado" /> € </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                </div>
            </t>
        </t>
    </template>
</odoo>